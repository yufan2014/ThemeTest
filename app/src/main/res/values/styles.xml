<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--白天主题-->
    <style name="DayTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>

        <item name="app_background">@color/backgroundColor</item>
        <item name="main_text">@color/textColor</item>
        <item name="btn_text">@color/btnColor</item>
        <item name="btn_background">@drawable/btn_round</item>
        <item name="lineColor">@color/lineColor</item>
        <item name="item_bg">@color/item_bg</item>
    </style>


    <!--黑夜主题-->
    <style name="NightTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>

        <item name="app_background">@color/backgroundColor_night</item>
        <item name="main_text">@color/textColor_night</item>
        <item name="btn_text">@color/textColor_night</item>
        <item name="btn_background">@drawable/btn_round_night</item>
        <item name="lineColor">@color/lineColor_night</item>
        <item name="item_bg">@color/item_night</item>
    </style>

</resources>
